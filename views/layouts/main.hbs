<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>We Fly Cheap</title>
  <link href="https://fonts.googleapis.com/css?family=Muli:400,800" rel="stylesheet">
  <link rel="stylesheet" type="text/css" href="css/style.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
  <script src="runsearch.js"></script>
  <script src="makeAirportList.js"></script>
</head>
<body>
  <div class="container">
    <h1 id="header" onclick="home()">{{ header }}</h1>
    <h3 id="subheader">{{ subheader }}</h3>
    <div class="inputs">
      <div class="date">
        <h3>Date:</h3>
        <input type="text" id="date" placeholder="yyyy-mm-dd" value="{{ inputDate }}">
      </div>
      <div class="origin1">
        <h3>Leaving from:</h3>
        <input type="text" id="origin1" placeholder="RDU" value="{{ inputOrigin1 }}">
      </div>
      <div class="origin2">
        <h3>&</h3>
        <input type="text" id="origin2" placeholder="SFO" value="{{ inputOrigin2 }}">
      </div>
      <button onclick="runSearch()" id="search">Find flights</button>
    </div>
    
    <div id="flightResults">
			<p class="status" id="found">{{ found }}</p>
			<ul class="sort">
				{{#each flightResults}}
					{{#if success}}
						<li class="success" data-price="{{ price }}" href="{{ link }}">
							<span class="price">${{ price }}</span>
							<span class="destination">to {{ destination }}</span>
							{{#each details}}
								<br><span class="details">{{ price }} {{ origin }}</span>
							{{/each}}
							<span class="button">View flights</span>
						</li>
					{{/if}}
				{{/each}}
			</ul>
			<p class="status" id="notfound">{{ notfound }}</p>
			<ul>
				{{#each flightResults}}
					{{#unless success}}
						<li class="failed" href="{{ link }}">
							<span class="destination">To {{ destination }}:</span>
							<span class="price">{{ price }}</span>
						</li>
					{{/unless}}
				{{/each}}
			</ul>
    </div>
  </div>
</body>
</html>